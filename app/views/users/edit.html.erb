<h1>ユーザー情報編集</h1>

<%= form_for (@user) do |t| %>
<p>氏名</p>
<%= t.text_field :lastname, autofocus: true, placeholder:"性" %>
<%= t.text_field :firstname, autofocus: true, placeholder:"名" %>

<%= t.text_field :telephone, autofocus: true, placeholder:"電話番号" %>
<%= t.text_field :email, autofocus: true, placeholder:"Eメールアドレス" %>

<%= t.submit "変更を保存" %>
<% end %>
