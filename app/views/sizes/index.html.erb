          <li class="nav-list-item"><%= link_to "ログインはこちら", new_user_session_path, :style=>"text-decoration: none; color:#a9a9a9;" %></li>
          <li class="nav-list-item"><%= link_to "新規会員登録", new_user_registration_path, :style=>"text-decoration: none; color:#a9a9a9;" %></li>
        <% end %>
