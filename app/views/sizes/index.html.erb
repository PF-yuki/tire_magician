<h1>トップページ</h1>

<% if user_signed_in? %>
	<h3>ログイン済み</h3>
	<h3><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></h3>
	<h3><%= link_to "マイページ", user_path(current_user.id) %></h3>
<% else %>
    <%= link_to "ログインはこちら", new_user_session_path %>
    <%= link_to "新規会員登録", new_user_registration_path %>
<% end %>