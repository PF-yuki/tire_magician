<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <link rel="stylesheet" href="style.css">
</head>

<body>
  <!-- header -->
  <%= render 'sizes/header' %>

  <main>
      <!-- スライダー -->
    <div id="sampleCarousel" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner" role="listbox">
        <div class="item active">
          <img src="../assets/main.jpg" style="width: 100%; height: 500px; background-size: cover; background-position: center;" alt="First slide">
        </div>
        <div class="item">
          <img src="../assets/main.jpg" style="width: 100%; height: 500px; background-size: cover; background-position: center;" alt="Second slide">
        </div>
        <div class="item">
          <img src="../assets/main.jpg" style="width: 100%; height: 500px; background-size: cover; background-position: center;" alt="Third slide">
        </div>
      </div>
      <a class="left carousel-control" href="#sampleCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">前へ</span>
      </a>
      <a class="right carousel-control" href="#sampleCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">次へ</span>
      </a>
    </div>

    <!-- メインコンテンツ-->
    <div class="container">
      <div class="row">
        <div class="col-xs-1"></div>
        <div class="col-xs-10">

          <!-- 購入フロー -->
          <div class="main-visual">
          </div>

          <!-- 商品選択ページへのリンク -->
          <div class="main-content">
            <div class="" style="background-image: url(/assets/tire.jpg); background-size: cover; background-position: top center; height:400px; width: 100%;">
  	        <%= link_to '商品を選択する', sizes_path, :style => "color:white; font-size: 15px; position: absolute; bottom: 15px; right: 40px;" %>
            </div>
          </div>


        </div>
        <div class="col-xs-1"></div>
      </div>
    </div>
  </main>


  <!-- footer -->
  <%= render 'sizes/footer' %>

</body>
</html>


